{
    "name": "joomla/archive",
    "type": "joomla-package",
    "description": "Joomla Archive Package",
    "keywords": ["joomla", "framework", "archive"],
    "homepage": "https://github.com/joomla-framework/archive",
    "license": "GPL-2.0+",
    "require": {
        "php": "^5.3.10|~7.0",
        "joomla/filesystem": "~1.3|~2.0"
    },
    "require-dev": {
        "joomla/test": "~1.0",
        "phpunit/phpunit": "^4.8.35|^5.4.3|~6.0",
        "squizlabs/php_codesniffer": "1.*"
    },
    "suggest": {
        "ext-bz2": "To extract bzip2 compressed packages",
        "ext-zip": "To extract zip compressed packages",
        "ext-zlib": "To extract gzip or zip compressed packages"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Archive\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Archive\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
