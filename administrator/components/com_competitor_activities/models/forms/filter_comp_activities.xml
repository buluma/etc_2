<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_COMPETITOR_ACTIVITIES_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_COMPETITOR_ACTIVITIES_FILTER_STATE"
               description="COM_COMPETITOR_ACTIVITIES_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="brand" label="COM_COMPETITOR_ACTIVITIES_FORM_LBL_COMP_ACTIVITY_BRAND" type="sql" query="SELECT '' AS `id`, 'COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_BRAND_FILTER' AS `text` UNION (SELECT id as value, product_name as text FROM #__products)" translate="true" key_field="value" value_field="text" onchange="this.form.submit();"/>
<field name="category" label="COM_COMPETITOR_ACTIVITIES_FORM_LBL_COMP_ACTIVITY_CATEGORY" type="category" extension="com_competitor_activities.comp_activities" onchange="this.form.submit();" default="">
  <option value=""/>
  <option value="">JOPTION_SELECT_CATEGORY</option>
</field>
<field name="submitter" label="COM_COMPETITOR_ACTIVITIES_FORM_LBL_COMP_ACTIVITY_SUBMITTER" type="sql" query="SELECT &quot;&quot; AS `id`, &quot;COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_SUBMITTER_FILTER&quot; AS `name` UNION SELECT `id`, `name` FROM `#__users`" translate="true" key_field="id" value_field="name" onchange="this.form.submit();"/>
<field name="user_id" label="COM_COMPETITOR_ACTIVITIES_FORM_LBL_COMP_ACTIVITY_USER_ID" type="sql" query="SELECT &quot;&quot; AS `id`, &quot;COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_USER_ID_FILTER&quot; AS `name` UNION SELECT `id`, `name` FROM `#__users`" translate="true" key_field="id" value_field="name" onchange="this.form.submit();"/>
<field name="start_date.from" label="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_START_DATE_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_START_DATE_FILTER_FROM"/>
<field name="start_date.to" label="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_START_DATE_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_START_DATE_FILTER_TO"/>
<field name="end_date.from" label="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_END_DATE_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_END_DATE_FILTER_FROM"/>
<field name="end_date.to" label="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_END_DATE_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="false" translateformat="false" hint="COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_END_DATE_FILTER_TO"/>
<field name="store" label="COM_COMPETITOR_ACTIVITIES_FORM_LBL_COMP_ACTIVITY_STORE" type="sql" query="SELECT '' AS `id`, 'COM_COMPETITOR_ACTIVITIES_COMP_ACTIVITIES_STORE_FILTER' AS `text` UNION (SELECT id as value, shop_name as text from #__outlets)" translate="true" key_field="value" value_field="text" onchange="this.form.submit();"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`unique_id` ASC">Unique Id Ascending</option><option value="a.`unique_id` DESC">Unique Id Descending</option><option value="a.`brand` ASC">Brands Ascending</option><option value="a.`brand` DESC">Brands Descending</option><option value="a.`category` ASC">Category Ascending</option><option value="a.`category` DESC">Category Descending</option><option value="a.`submitter` ASC">Submitted by Ascending</option><option value="a.`submitter` DESC">Submitted by Descending</option><option value="a.`user_id` ASC">User ID Ascending</option><option value="a.`user_id` DESC">User ID Descending</option><option value="a.`start_date` ASC">Start Dates Ascending</option><option value="a.`start_date` DESC">Start Dates Descending</option><option value="a.`end_date` ASC">End Dates Ascending</option><option value="a.`end_date` DESC">End Dates Descending</option><option value="a.`store` ASC">Store Ascending</option><option value="a.`store` DESC">Store Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>