<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_PRODUCTS_FORM_LBL_PRODUCT_CREATED_BY" description="COM_PRODUCTS_FORM_DESC_PRODUCT_CREATED_BY" hidden="true" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_PRODUCTS_FORM_LBL_PRODUCT_MODIFIED_BY" description="COM_PRODUCTS_FORM_DESC_PRODUCT_MODIFIED_BY" hidden="true" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_MODIFIED_BY"/>
    <field name="product_code" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_CODE" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_CODE" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_CODE"/>
    <field name="product_name" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_NAME" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_NAME" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_NAME"/>
    <field name="category" extension="com_products" type="category" required="true" message="Please select Product category" label="COM_PRODUCTS_FORM_LBL_PRODUCT_CATEGORY" description="COM_PRODUCTS_FORM_DESC_PRODUCT_CATEGORY" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_CATEGORY"/>
    <field name="product_classification" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_CLASSIFICATION" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_CLASSIFICATION" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_CLASSIFICATION"/>
    <field name="product_type" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_TYPE" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_TYPE" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_TYPE"/>
    <field name="product_uom" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_UOM" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_UOM" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_UOM"/>
    <field name="product_price" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_PRICE" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_PRICE" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_PRICE"/>
    <field name="product_size" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_SIZE" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_SIZE" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_SIZE"/>
    <field name="product_cases" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_CASES" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PRODUCT_CASES" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PRODUCT_CASES"/>
    <field name="published" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_PUBLISHED" description="COM_PRODUCTS_FORM_DESC_PRODUCT_PUBLISHED" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_PUBLISHED"/>
    <field name="must_have" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_MUST_HAVE" description="COM_PRODUCTS_FORM_DESC_PRODUCT_MUST_HAVE" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_MUST_HAVE"/>
    <field name="deleted" filter="safehtml" type="text" label="COM_PRODUCTS_FORM_LBL_PRODUCT_DELETED" description="COM_PRODUCTS_FORM_DESC_PRODUCT_DELETED" hint="COM_PRODUCTS_FORM_LBL_PRODUCT_DELETED"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
