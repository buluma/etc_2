<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_SUBMITTED_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_SUBMITTED_FILTER_STATE"
               description="COM_SUBMITTED_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="sku_available" label="COM_SUBMITTED_FORM_LBL_CHECKLIST_SKU_AVAILABLE" type="list" onchange="this.form.submit();" default="COM_SUBMITTED_CHECKLISTS_SKU_AVAILABLE_FILTER">
  <option value="">COM_SUBMITTED_CHECKLISTS_SKU_AVAILABLE_FILTER</option>
  <option value="1">COM_SUBMITTED_CHECKLISTS_SKU_AVAILABLE_OPTION_1</option>
  <option value="2">COM_SUBMITTED_CHECKLISTS_SKU_AVAILABLE_OPTION_2</option>
</field>
<field name="store_id" label="COM_SUBMITTED_FORM_LBL_CHECKLIST_STORE_ID" type="sql" query="SELECT '' AS `id`, 'COM_SUBMITTED_CHECKLISTS_STORE_ID_FILTER' AS `shop_name` UNION (SELECT id, shop_name FROM `#__outlets`)" translate="true" key_field="id" value_field="shop_name" onchange="this.form.submit();"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`shop_mml` ASC">Shop MML Ascending</option><option value="a.`shop_mml` DESC">Shop MML Descending</option><option value="a.`sku_available` ASC">SKU Availability Ascending</option><option value="a.`sku_available` DESC">SKU Availability Descending</option><option value="a.`merchandising` ASC">Merchandising Ascending</option><option value="a.`merchandising` DESC">Merchandising Descending</option><option value="a.`shelf_quantity` ASC">Shelf Quantity Ascending</option><option value="a.`shelf_quantity` DESC">Shelf Quantity Descending</option><option value="a.`store_id` ASC">Store Ids Ascending</option><option value="a.`store_id` DESC">Store Ids Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>